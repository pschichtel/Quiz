<?xml version="1.0" encoding="UTF-8" ?>
<quiz>
    <config>
        <!-- Gibt den Namen des Quiz an. -->
        <entry name="name">Programmierung</entry>
        <!-- Gibt an wie viele Punkte es pro richtige Antwort gibt. -->
        <entry name="right_points">1</entry>
        <!-- Gibt an wie viele Punkte pro falsche Antwort abgezeogen werden. -->
        <entry name="wrong_points">0</entry>
        <!-- Gibt an ob auch beim erneuten Versuch Punkte abgezeogen werden sollen. -->
        <entry name="retry_decreasepoints">false</entry>
        <!-- Gibt an ob man die Frage bei falscher Antwort wiederholt -->
        <entry name="fail_retry">false</entry>
        <!-- Gibt an ob bei einer falschen Antwort, die richtige angezeigt werden soll -->
        <entry name="fail_showcorrect">false</entry>
        <!-- Gibt an ob Sound abgespielt werden sollen (HTML5) -->
        <entry name="playsounds">true</entry>
        <!-- Gibt an welcher Text bei einer richtigen Antwort standardmäßig angezeigt werden soll -->
        <entry name="default.right">Das ist korrekt!</entry>
        <!-- Gibt an welcher Text bei einer falschen Antwort standardmäßig angezeigt werden soll -->
        <entry name="default.wrong">Das war leider nicht die richtige Antwort.</entry>
        <!-- Gibt an welcher Sound standardmä0ig bei richtigen Antworten abgespielt werden soll -->
        <entry name="default.right_sound">default</entry>
        <!-- Gibt an welcher Sound standardmä0ig bei falschen Antworten abgespielt werden soll -->
        <entry name="default.wrong_sound">default</entry>
        <!-- Gibt die Nachricht an die beim starten des Quiz angezeigt wird-->
        <entry name="welcome">
            Willkommen beim Quiz über Programmierung!
            Hier erwarten dich {QUESTIONS} Fragen über verschiedene Themen der Programmierung.

            Good luck and have fun!
        </entry>
        <!-- Gibt die Nachricht an die beim abschließen des Quiz angezeigt werden soll -->
        <entry name="completed"><![CDATA[
            Du hast das Quiz abgeschlossen und dabei {POINTS} Punkte erreicht!
            Dabei wurden {RIGHT} Fragen ({RIGHT%}%) richtig und {WRONG} Fragen ({WRONG%}%) falsch beantwortet
        ]]></entry>
    </config>
